<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat">

        <!-- Remove UGLY blue line from actionbar -->
        <item name="android:actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RemoteTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/remote_bg</item>
        <item name="android:buttonStyle">@style/RemoteButtonTheme</item>
    </style>

    <style name="RemoteButtonTheme" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/remote_button_bg</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Common.Small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ccc</item>
    </style>

</resources>