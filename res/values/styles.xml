<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat">

        <!-- Remove UGLY blue line from actionbar -->
        <item name="android:actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="android:windowBackground">@drawable/remote_bg</item>

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="theme_transparent" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/transparent_button</item>
    </style>

    <style name="theme_solid" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/solid_button</item>
    </style>

    <style name="transparent_button" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/remote_button_bg_tr</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="solid_button" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/remote_button_bg_sl</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Common.Small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ccc</item>
    </style>

    <style name="DialogAnims" parent="AppBaseTheme">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_down</item>
    </style>

</resources>