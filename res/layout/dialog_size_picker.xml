<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/sizepicker_tvwidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/sizepicker_width" />

    <NumberPicker
        android:id="@+id/sizepicker_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/sizepicker_tvwidth"
        android:layout_below="@id/sizepicker_tvwidth"
        android:layout_marginTop="@dimen/element_vertical_margin" />

    <NumberPicker
        android:id="@+id/sizepicker_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sizepicker_width"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/sizepicker_width" />

    <TextView
        android:id="@+id/sizepicker_tvheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sizepicker_width"
        android:layout_alignLeft="@+id/sizepicker_height"
        android:text="@string/sizepicker_height" />

</RelativeLayout>